  .about-pages
    $about-page-link-spacing = 10px

    clearfix()
    margin: 30px ($about-page-link-spacing  * -1)

    .item
      float: left
      width: 33.33%

      a
        background: rgba(#000, 0.5)
        border-radius: 3px
        border-top: 1px solid #000
        box-shadow: 0 1px 0 rgba(#fff, 0.125)
        display: block
        padding: 50px 0
        margin: 0 $about-page-link-spacing
        text-align: center
