@keyframes home-icons-rotation
  from
    transform: rotate(0)

  to
    transform: rotate(360deg)

@keyframes home-icon-level
  from
    transform: rotate(0)

  to
    transform: rotate(-360deg)

body > .stack > .home
  .about-the-project
    clearfix()

    background: url("./images/lots-of-plankton.png") center center no-repeat
    background-size: contain
    margin-top: -50px
    padding: 150px 0 200px
    text-shadow:
      0 1px 2px #000,
      0 2px 3px #000

  .description
    float: left
    width: 66.67%

  .action
    float: left
    text-align: center
    width: 33.33%

    .group-selector
      width: 100%
      max-width: 220px
      margin: 10px auto
      border: none
      display: flex

      label:first-of-type
        padding-bottom: 10px

    a
      @extends #standard-button
      font-size: 24px

      .icons
        $icon-size = 60px

        color: #fff
        height: $icon-size
        left: 50%
        margin: ($icon-size / -2) 0 0 ($icon-size / -2)
        opacity: 0
        position: absolute
        text-shadow: 0 1px 1px #000
        top: 50%
        transition: opacity 0.25s ease-out
        width: $icon-size

        i
          font-size: $icon-size
          height: $icon-size
          left: 0
          position: absolute
          top: 0
          transition:
            left 0.25s ease-out,
            top 0.25s ease-out
          width: $icon-size

